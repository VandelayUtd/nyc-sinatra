<h2>Create a New Figure</h2>

<form method='POST' action='/figures'>
<label>Figure Name:</label>
<input type="text" id='figure_name' name="figure[name]"> <br><br>

<% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"> <br>
<%end%> <br><br>

<h3>Create New Title</h3>
<input type="text" id='new_title' name="title[name]"> <br><br>

<h3>Landmarks</h3>
<% Landmark.all.each do |landmark| %>
<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>"> <%=landmark.name%> <br>
<%end%> <br><br>
 

<h3>Create New Landmark</h3>
Name: <input type='text' id='new_landmark' name='landmark[name]'>
Year: <input type='text' id='landmark_year_created' name='landmark[year_completed]'>
<button type='submit' value='Create New Figure'>Create New Figure</button> 

</form><br> <br>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>

